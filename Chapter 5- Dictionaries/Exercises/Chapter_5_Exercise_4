rivers = {
    'sepik': 'new guinea',
    'zambezi': 'africa',
    'mekong': 'china',
    'ganges': 'india',
    'amazon': 'brazil',
    }

for river, country in rivers.items():
    print("The " + river.title() + " runs through " + country.title() + ".")

print("\nNames of each rivers:  ")
for river in rivers.keys():
    print("- " + river.title())

print("\nNames of each countries: ")
for country in rivers.values():
    print("- " + country.title())